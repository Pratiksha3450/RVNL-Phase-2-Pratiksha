@model RVNLMIS.Models.GroupMasterModel
@{
    Layout = null;
}
<div class="card">
    <div class="card-header pb-4">
        <h5>Group Information</h5>
    </div>

    @using (Ajax.BeginForm("AddGroupDetails", "GroupMaster", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnGroupSuccess" }, new { @class = "form", @id = "frmGroup" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GroupId)
        <div class="card-body pl-3 pr-3 pb-1 pt-2" id="card1">
            <div class="row">
                <div class="col-md-12 mb-1">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50" for="txtGroupCode">Group Code @Html.ValidationMessageFor(model => model.GroupCode, "", new { @class = "text-danger" })</label>

                        @if (Model.GroupId != 0)
                        {

                            @Html.EditorFor(model => model.GroupCode, new { htmlAttributes = new { @class = "mb-3 form-control disableCN", @type = "text", @placeholder = "Enter Group code" } })
                        }
                        else
                        {
                            @Html.EditorFor(model => model.GroupCode, new { htmlAttributes = new { @class = "mb-3 form-control disableCN", @type = "text", @placeholder = "Enter Group code" } })
                        }
                    </div>
                </div>

                <div class="col-md-12 mb-1">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50" for="txtGroupName">Group Name @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "mb-3 form-control", @type = "text", @placeholder = "Enter Group name" } })
                    </div>
                </div>

                <div class="col-md-12 text-right">
                    <div class="form-group ">
                        @*@if (Model.GroupId != 0)
                            {
                                <button type="submit" class="btn btn-xs btn-primary has-ripple  btnSubmit" value="Update"><i class="m-r-5 feather icon-check"></i>Update</button>
                            }
                            else
                            {*@
                        <button type="submit" class="btn btn-sm btn-theme pull-right btnSubmit" value="Save">Save</button>
                        @*}*@
                    </div>
                </div>

            </div>
        </div>


    }
</div>

<script>
    $(window).resize(function () {
        $('#card1').height($(window).height() - 205);
    });
    $(window).trigger('resize');
</script>
