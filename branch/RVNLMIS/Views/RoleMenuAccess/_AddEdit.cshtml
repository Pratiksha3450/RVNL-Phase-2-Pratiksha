@model RVNLMIS.Models.RoleMenuAccessModel
@{
    Layout = null;
}


<div class="card">
    <div class="card-header pb-4">
        <h5>Role Menu Access</h5>
    </div>
    @using (Ajax.BeginForm("AddEditRoleAccess", "RoleMenuAccess", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnMenuRoleSuccess" }, new { @class = "form" }))
    {
        @Html.HiddenFor(model => model.RoleMenuID)
        <div class="card-body pl-3 pr-3 pb-1 pt-2" id="card1">
            <div class="row">

                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50 pt-3" for="txtEDName">Role @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })</label>
                        @*<label class="col-form-label-sm-user text-black-50 pt-3" for="txtEDName">Role @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })</label>*@
                        @Html.DropDownListFor(model => model.RoleID, ViewBag.RoleList as SelectList, "Select Role", new { @class = "form-control form-control-sm ", @id = "cmbRole" })
                    </div>
                </div>
                
                <div class="col-md-12">
                    <div class="form-group mb-1 mt-1">
                        <label class="col-form-label-sm-user text-black-50 pt-3" for="txtEDName">Menu</label>
                        @Html.DropDownList("ddlMenus", ViewBag.MenuList as SelectList, null, new { @class = "form-control form-control-sm", multiple = "multiple", size = "5" })
                    </div>
                </div>
                @*<div class="col-md-2">
                    <div class="col-md-12 text-right pt-2">
                        <button type="submit" class="btn btn-sm waves-effect waves-light btn-outline-primary pull-right" title="Add Package"><i class="fas fa-plus"></i> Add</button>
                        <button type="button" id="btnReset" class="btn btn-sm btn-danger" onclick="ClearViewAndGrid()"><i class="fa fa-refresh"></i> Reset</button>
                    </div>
                </div>*@
            </div>
            </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-sm waves-effect waves-light btn-outline-primary pull-right" title="Add Package"><i class="fas fa-plus"></i> Add</button>
                    @*<button type="button" id="btnReset" class="btn btn-sm btn-danger" onclick="ClearViewAndGrid()"><i class="fa fa-refresh"></i> Reset</button>*@
                </div>
            </div>

        </div>
    }
</div>
<script>
    $(window).resize(function () {
        $('#card1').height($(window).height() - 257);
    });
    $(window).trigger('resize');
</script>

