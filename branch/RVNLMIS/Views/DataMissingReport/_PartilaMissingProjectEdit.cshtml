
@model RVNLMIS.Models.ProjectModel
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <h6 class="modal-title">Add / Update Project Details</h6>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>


    </div>
    @using (Ajax.BeginForm("AddProjectDetails", "DataMissingReport", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateProjectSuccess" }, new { @class = "form", Page = "Projectform" }))

    {

        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProjectId)
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50">
                            ED Name @Html.ValidationMessageFor(model => model.EDId, "", new { @class = "text-danger" })
                        </label>
                        @Html.DropDownListFor(model => model.EDId, ViewBag.EdList as SelectList, "Select ED", new { @class = "mb-1 form-control  ddlEDId" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50">
                            PIU Name
                            @Html.ValidationMessageFor(model => model.PIUId, "", new { @class = "text-danger" })
                        </label>
                        @*@Html.DropDownListFor(model => model.RoleTableId, new SelectList(Enumerable.Empty<SelectListItem>()), "Select Role Table", new { @class = "mb-1 form-control " })*@
                        @Html.DropDownListFor(model => model.PIUId, ViewBag.CPMList as SelectList, "Select PIU", new { @class = "mb-1 form-control  PIUId" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">Project Code  @Html.ValidationMessageFor(model => model.ProjectCode, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.ProjectCode, new { htmlAttributes = new { @class = "mb-1 form-control ", @type = "text", @placeholder = "Ex: RVNL0001", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">Project Name @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-1 form-control " id="txtUserName" placeholder="Ex: User Name">*@
                        @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "mb-1 form-control", @type = "text", @placeholder = "Ex: Project Name" } })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtPassword">Project Full Name @Html.ValidationMessageFor(model => model.ProjectFullName, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.ProjectFullName, new { htmlAttributes = new { @class = "mb-1 form-control", @type = "text", @placeholder = "Ex: Project Full Name" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtEmail">Date Of Transfer @Html.ValidationMessageFor(model => model.DateOfTransfers, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-1 form-control " id="txtEmail" placeholder="Ex: Emai@gmail.com">*@
                        @Html.EditorFor(model => model.DateOfTransfers, new { htmlAttributes = new { @class = "mb-1 form-control", onkeydown = "return false", @type = "date", @placeholder = "Ex: Date Of Transfer" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtMobile">Project Length (In KM) @Html.ValidationMessageFor(model => model.ProjectLength, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-1 form-control " id="txtMobile" placeholder="Ex: 9876543210">*@
                        @Html.EditorFor(model => model.ProjectLength, new { htmlAttributes = new { @class = "mb-1 form-control", @type = "text", @placeholder = "Ex: 1,20,00,000", @onkeypress = "ValidateNumber(event);" } })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50">
                            Railway Name
                            @Html.ValidationMessageFor(model => model.RailwayId, "", new { @class = "text-danger" })
                        </label>
                        @Html.DropDownListFor(model => model.RailwayId, ViewBag.RailwayList as SelectList, "Select Railway", new { @class = "mb-1 form-control  ddlRailwayId" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50">
                            Project Type
                            @Html.ValidationMessageFor(model => model.ProjectTypeId, "", new { @class = "text-danger" })
                        </label>
                        @Html.DropDownListFor(model => model.ProjectTypeId, ViewBag.ProjectTypeList as SelectList, "Select Project Type", new { @class = "mb-1 form-control  ddlProjectType" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtEmail">Anticipated Value (In Crore) @Html.ValidationMessageFor(model => model.AnticipatedValue, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-1 form-control " id="txtEmail" placeholder="Ex: Emai@gmail.com">*@
                        @Html.EditorFor(model => model.AnticipatedValue, new { htmlAttributes = new { @class = "mb-1 form-control", @type = "text", @placeholder = "Ex: 1,20,00,000", @onkeypress = "ValidateNumber(event);" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtMobile">Value Till Date (In Crore) @Html.ValidationMessageFor(model => model.ValueTillDate, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-1 form-control " id="txtMobile" placeholder="Ex: 9876543210">*@
                        @Html.EditorFor(model => model.ValueTillDate, new { htmlAttributes = new { @class = "mb-1 form-control", @type = "text", @placeholder = "Ex:  1,20,00,000", @onkeypress = "ValidateNumber(event);" } })
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-sm btn-theme pull-right" value="Save">Save</button>
                </div>
            </div>
        </div>
    }

</div>
