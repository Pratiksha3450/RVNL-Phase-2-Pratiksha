@model RVNLMIS.Areas.RFI.Models.RFIInspStatusUpdateModel
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">
            Re - Schedule RFI
        </h5>
        <button id="btnCloseDelete" type="button" class="close btn-xs " data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>

    </div>
    @using (Ajax.BeginForm("SubmitRescheduledInspDate", "GenerateRFI", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "RescheduleSuccess" }, new { @class = "form", Page = "Usersform", id = "rescheduleRfifrm" }))
    {
        @Html.HiddenFor(model => model.RFIId)

    <div class="modal-body" id="noscroll">

        <h6>@string.Concat(Model.RFICode, " (Rev.", Model.RevisionNo, ")")</h6>
        <h5 class="mb-2">@Model.PackageName</h5>
        <div class="saperator_multiple"><div class="divider_multiple"></div><div class="divider_green"></div></div>

        <div class="pb-1 pt-3">
            <h6 class="form-group fill">
                <label for="inputPassword4">Previous Inspection Date:</label>&nbsp;
                <label class="text-brown" for="inputPassword4">@Model.InspDate.Value.ToString("dd MMM yyyy hh:mm tt")</label>
            </h6>
        </div>

        <div class="pb-1 pt-1">
            <h6 class="form-group fill">
                <label for="inputPassword4">Inspection Date</label>
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <i class="fa fa-calendar input-group-text text-blue"></i>
                    </div>
                    @Html.Editor("NewInspDate", new { htmlAttributes = new { @class = "form-control md-addon datepicker2", @placeholder = "  select new date", @type = "text" } })
                </div>
            </h6>
        </div>




        <div class="pt-1">
            <label><b> Do you want to assign New Inspector ? </b></label>
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="customswitch1">
                <label class="custom-control-label" for="customswitch1">Yes / No</label>
            </div>
        </div>


        <div class="mt-3" id="inspectorlist" style="display:none">
            <div class="form-group fill" id="drpcontainer">
                <label for="AssignToPMC">Select Inspector</label>
                @(Html.Kendo().DropDownList().Popup(p => p.AppendTo("#drpcontainer"))
                                .Name("AssignToPMC")
                                .DataTextField("Name")
                                .DataValueField("ID")
                                .HtmlAttributes(new { style = "width:100%", @class = "form-control mt-2" })
                                .Filter("contains").OptionLabel("Select PMC")
                                .Value(Model.AssignedTo.ToString())
                                .DataSource(source =>
                                {
                                    source.Read(read =>
                                        {
                                            read.Action("Get_PMCNUserList", "GenerateRFI");
                                        })
                                        .ServerFiltering(true);
                                })
                )
            </div>
        </div>

        <div class="text-right">
            <button id="btnReschedule" type="submit" class="btn btn-sm btn_theme has-ripple mt-4"> Submit </button>
        </div>
    </div>
    }
</div>