
@{
    ViewBag.Title = "_KeepAlive";
    Layout = null;
}

<!--Start Show Session Expire Warning Popup here -->
<div class="modal fade" id="session-expire-warning-modal" aria-hidden="true" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Session Expire Warning</h4>
            </div>
            <div class="modal-body" style="padding:20px 20px!important;"> Your session will expire in <span id="seconds-timer"></span> seconds. Do you want to extend the session? </div>
            <div class="modal-footer">
                <button id="btnOk" type="button" class="btn btn-default" style="padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: normal; border: 1px solid transparent; border-radius: 4px;  background-color: #428bca; color: #FFF;">Ok</button>
                <button id="btnLogoutNow" type="button" class="btn btn-default" style="padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: normal; border: 1px solid transparent; border-radius: 4px;  background-color: #428bca; color: #FFF;">Logout now</button>
            </div>
        </div>
    </div>
</div>

<!--Start Show Session Expire Warning Popup here -->
<div class="modal fade" id="session-expired-modal" aria-hidden="true" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Session Expired Warning</h4>
            </div>
            <div class="modal-body" style="padding:20px 20px!important;"> Your session is expired! </div>
            <div class="modal-footer">
                <button id="btnExpire" type="button" class="btn btn-default" style="padding: 6px 12px; margin-bottom: 0; font-size: 14px; font-weight: normal; border: 1px solid transparent; border-radius: 4px;  background-color: #428bca; color: #FFF;">Ok</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        console.log(@(Session.Timeout - 1) * 60000);

        console.log(getdate());
        //     var timeout = 30000; // timer if no activity 3 seconds (3000 milliseconds):
        var timeout = @(Session.Timeout - 1) * 60 * 1000; // 5 minutes
        var beattime = 1 * 60 * 1000; //timer to check activity ping 1 minutes
        var renew = 0;
        var hold = 0;
        var counter = 30; // Count down timer for Popup modal in seconds
        var sessoff = "/Login/Logout"; //logout action url
        var sessurl = "/Login/KeepSessionAlive";
        var hbeat;
        var abeat;
        var popTimer;

        //hide modal
        $("#session-expire-warning-modal").modal('hide');
        $("#session-expired-modal").modal('hide');

        ClientAlive = 0;
        CheckAlive();
        ActiveBeat();
        HeartBeat();

        $("#btnOk").click(function() {
            $("#session-expire-warning-modal").modal('hide');
            PingServer('hbeat');
            hold = 0;
        });

        $("#btnExpire").click(function () {
            window.location = sessoff;
        });

        $("#btnLogoutNow").click(function() {
            $("#session-expire-warning-modal").modal('hide');
            window.location = sessoff;
        });

        function HeartBeat() {
            console.log('ClientAlive from HeartBeat' + ClientAlive);
            hbeat = setTimeout(function () {
                if (!ClientAlive) {
                    renew = 0;
                    hold = 1;
                    countdownDisplay();
                    console.log('session-expire-warning-modal show' + getdate());
                    $("#session-expire-warning-modal").modal('show');
                    beep();
                    setTimeout(function () {
                        if (renew == 0) {
                            $("#session-expire-warning-modal").modal('hide');
                            // window.location = sessoff;
                            console.log('session-expired-modal show' + getdate());
                            $("#session-expired-modal").modal('show');
                        }
                    }, counter * 1000);
                }
                else {
                    PingServer('ActBeatForced');
                }
            }, timeout);
        }
        function ActiveBeat() {
            console.log('ClientAlive from ActiveBeat' + ClientAlive + 'datetime' + getdate());
            abeat = setTimeout(function () {
                if (ClientAlive) {
                    PingServer('Abeat');
                }
                else {
                    clearTimeout(abeat);
                    beattimex = beattime / 1000;
                    console.log('beattimex' + beattimex);
                    ActiveBeat()
                }
            }, beattime);
        }
        function PingServer(src) {
            console.log('PingServer called- ' + src + 'datetime' + getdate());
            $.ajax({
                type: "POST",
                url: sessurl,
                success: function (data) {
                    console.log('data from pingserver post: ');
                    console.log(data);
                },
                error: function(data) {
                    alert("ERROR");
                    console.log("Error posting to " & keepSessionAliveUrl);
                }
            });
            clearTimeout(abeat);
            beattimex = beattime / 1000;
            clearTimeout(hbeat);
            timeoutx = timeout / 1000;
            clearTimeout(popTimer);
            ClientAlive = 0;
            HeartBeat();
            ActiveBeat();
            CheckAlive();
            renew = 1;
        }
        function CheckAlive() {
            $("body").on("mousemove keydown", function () {
                if (!hold) {
                    console.log(' if (!hold) {');
                    ClientAlive = 1;
                }
            });
        }
        function countdownDisplay() {
            var dialogDisplaySeconds = counter;

            popTimer = setInterval(function() {
                $('#seconds-timer').html(dialogDisplaySeconds);

                console.log('dialogDisplaySeconds ' + dialogDisplaySeconds + 'datetime ' + getdate());
                dialogDisplaySeconds -= 1;

                if (dialogDisplaySeconds == 0) {
                    clearInterval(popTimer);
                }
            }, 1000);
        };

        function getdate() {
            var today = new Date();
            var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
            var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
            var dateTime = date + ' ' + time;
            return dateTime;
        }

        function beep() {
            var snd = new Audio("data:audio/wav;base64,");
            snd.play();
        }
    })
</script>
