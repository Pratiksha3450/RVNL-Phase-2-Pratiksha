@using RVNLMIS.Models;
@model IEnumerable<RVNLMIS.Models.PushNotifyModel>

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<style>

    .pull-right {
        float: right;
    }

    .notify_count .badge {
        background-color: #ff5252;
        color: #fff;
        font-size: 10px;
        border-radius: 50%;
        text-align: center;
        border-radius: 50%;
        right: auto;
        position: absolute;
        top: 5px;
        padding: 4px;
        width: 19px;
        -webkit-animation: not-blink 2.1s cubic-bezier(0.65, 0.815, 0.735, 0.395) infinite;
        animation: not-blink 2.1s cubic-bezier(0.65, 0.815, 0.735, 0.395) infinite;
    }
</style>
<div id="" class="full-width">
    <div class="modal-content">
        <div class="modal-body" id="">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="text-center">
                <h3 class="mt-3">
                    <!-- <div><img src="assets/images/notify/RFI icon.png" class="wid-90" alt="images"></div> -->
                    Welcome To <span class="text-theme-blue">RFI</span> <span class="text-theme-green">Module</span>
                </h3>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="u-img notify_count">
                        <img src="~/Content/assetsNew/images/notify/notification.png" alt="notify image" class="wid-150">
                        @if (@Model.Count() != 0)
                        {
                            <span class="badge bg-c-red">@Model.Count()</span>
                        }
                    </div>
                </div>
                <div class="col-md-12">

                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <p class="f-16 text-center m-3">Hi, You have pending <strong>Notification</strong></p>


                            <div class="row justify-content-center text-left">
                                <div class="col-md-10">

                                    @foreach (var item in Model)
                                    {
                                        <div data-key="@item.NotificationId" class="clsDivNot alert alert-danger p-0 pl-2 pr-2" role="alert">
                                            <p>@item.Title 1 <span class="n-time text-muted pull-right"><i class="icon feather icon-clock m-r-10 text-magenta"></i>@item.SentOn.Value.ToString("dd MMM yyyy hh:mm tt")</span></p>
                                            <p>@item.Message</p>
                                            <p>@item.SentOn.Value.ToString("dd MMM yyyy hh:mm tt")</p>
                                        </div>
                                    }

                                    @*<div class="alert alert-warning p-0 pl-2 pr-2" role="alert">
                                            <b>NOTIFICATION 1</b>
                                            <p>Notification Message...........</p>
                                        </div>*@

                                    <a target="_blank" href="/NotificationLog/Index">
                                        <button class="btn btn-sm btn_theme float-right mt-2 mb-4">
                                            Read More ..
                                        </button>
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
        <img src="~/Content/assetsNew/images/notify/waves_bottom_bg.jpg" height="50px" />
    </div>
</div>