@model RVNLMIS.Models.EnggDwgTypeModel
@{
    Layout = null;
}

<div class="card">
    <div class="card-header pb-4">
        <h5>Engg Drawing Type Information</h5>
    </div>
    @using (Ajax.BeginForm("AddEnggDwgTypeDetails", "EnggDwgType", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnEnggDwgTypeSuccess" }, new { @class = "form", @id = "EnggDwgTypeform" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(mode => Model.DwgId)

        <div class="card-body pl-3 pr-3 pb-1 pt-2" id="card1">
            <div class="row">
                @*<div class="col-md-4 pt-2">
                    <h5>Engg Drawing Type Information</h5>
                </div>*@

                <div class="col-md-12 mb-1">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50" for="txtEnggDwgTypeName">Drawing Type Name @Html.ValidationMessageFor(model => model.DwgName, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.DwgName, new { htmlAttributes = new { @class = "mb-3 form-control", @type = "text", @placeholder = "Enter drawing type name" } })
                    </div>
                    
                </div>
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-sm btn-theme pull-right" value="Save">Save</button>
                </div>
            </div>
        </div>

        @*<div class="card-footer">
            <div class="row">

                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-sm btn-theme pull-right" value="Save">SAVE</button>
                </div>
            </div>
        </div>*@
    }
</div>
<script>
    $(window).resize(function () {
        $('#card1').height($(window).height() - 203);
    });
    $(window).trigger('resize');
</script>