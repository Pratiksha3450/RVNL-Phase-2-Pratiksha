@section scripts{


    <script>
        $(window).resize(function () {
            $('#KendoHeight').height($(window).height() - 195);
            $('#EnggDwgTypeGrid').height($(window).height() - 198);
        });
        $(window).trigger('resize');
        function OnEnggDwgTypeSuccess(response) {
            if (response == "Added Successfully") {
                ClearViewAndGrid();
                $.notify(response, { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });
            }
            else if (response == "Updated Successfully") {
                ClearViewAndGrid();
                $.notify(response, { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });
            }
            else if (response == "Already Exists") {
                ClearViewAndGrid();
                $.notify(response, { align: "right", verticalAlign: "top", type: "warning", background: "#ff9933", color: "#ffffff" });
            }
            else {

            }
        }

        function ExportExcel(e) {
            e.workbook.fileName = "Engg Drawing Type - " + kendo.toString(new Date, "dd-MMM-yyyy") + ".xls";
        }

        function HideColumn(e) {

            var grid = $("#EnggDwgTypeGrid").data("kendoGrid");
            grid.hideColumn(2);

            grid.options.pdf.fileName = "Engg Drawing Type - " + kendo.toString(new Date, "dd-MMM-yyyy");

            e.promise.done(function () {
                grid.showColumn(2);
            });
        }

        function dataBound() {

            rowNumber = 0;

            $(".EditEnggDwgType").on("click", function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                $.get(url, function (data) {
                    $('#EnggDwgTypeForms').html(data);
                    setTimeout(function () {

                    }, 500);
                });
            });

            $(".DeleteEnggDwgType").on("click", function () {
                console.info('DeleteUser called');
                var Id = $(this).data("key");
                $("#hiddenId").val(Id);
                $("#modalDelete").modal({ backdrop: 'static', keyboard: false, position: 'center' });
            });



        }
        $("#btnDeleteConfirm").on("click", function () {
            var id = $("#hiddenId").val();
            //alert(id);
            $.ajax({
                url: '/EnggDwgType/Delete/' + id,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function () {
                    //Refresh Kendo Grid

                    $("#modalDelete").modal('hide');

                    $('#EnggDwgTypeGrid').data('kendoGrid').dataSource.read();
                    $('#EnggDwgTypeGrid').data('kendoGrid').refresh();
                    $.notify('Deleted Successfully', { align: "right", verticalAlign: "top", type: "success", background: "#ff0000", color: "#fff" });

                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //ShowErrorMessage('Error deleting Project!');
                }
            });
        });


        function ClearViewAndGrid() {
            $("#DwgId").val(0);
            $("#DwgName").val("");
            $('#EnggDwgTypeGrid').data('kendoGrid').dataSource.read();
            $('#EnggDwgTypeGrid').data('kendoGrid').refresh();
        }

        $("#txtSearch").keyup(function () {
            var selecteditem = $('#txtSearch').val();
            var kgrid = $("#EnggDwgTypeGrid").data("kendoGrid");
            selecteditem = selecteditem.toUpperCase();
            var selectedArray = selecteditem.split(" ");
            if (selecteditem) {
                var orfilter = { logic: "or", filters: [] };
                var andfilter = { logic: "and", filters: [] };
                $.each(selectedArray, function (i, v) {
                    if (v.trim() == "") {
                    }
                    else {
                        $.each(selectedArray, function (i, v1) {
                            if (v1.trim() == "") {
                            }
                            else {
                                orfilter.filters.push({ field: "DwgName", operator: "contains", value: v1 }
                                    //,{ field: "DisciplineName", operator: "contains", value: v1 }
                                );
                                andfilter.filters.push(orfilter);
                                orfilter = { logic: "or", filters: [] };
                            }

                        });
                    }
                });
                kgrid.dataSource.filter(andfilter);
            }
            else {
                kgrid.dataSource.filter({});
            }
        });

    </script>

