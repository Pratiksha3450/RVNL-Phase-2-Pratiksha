@model RVNLMIS.Models.Config.CreateProjectBaseline

@{
    ViewBag.Title = "_AddEditPrjBaselineParameter";
    Layout = null;
}


<div class="card">

    <div class="card-header pb-4">
        <div class="row">
            <div class="col-sm-12">
                <h5>Configuration Parameters</h5>
            </div>
        </div>
    </div>

    @using (Ajax.BeginForm("AddEditPrjBaselineParameter", "Config", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnBaseSuccess" }, new { @class = "form-horizontal", Page = "form" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BaseID)
        <div class="card-body pl-3 pr-3 pb-1 pt-2" id="card1">
            <div class="row">
                <div class="col-md-12" id="prjContainer">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">Project   @Html.ValidationMessageFor(model => model.ProjId, "", new { @class = "text-danger" })</label>
                        @(Html.Kendo().DropDownListFor(model => model.ProjId).OptionLabel("Select Project").Popup(p => p.AppendTo("#prjContainer")).Filter("contains").HtmlAttributes(new { @class = "form-control form-control-sm" }).BindTo(ViewBag.ProjectList as SelectList)
)
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">
                            Base Revision
                        </label>
                        @Html.TextBoxFor(model => model.BaseRevision, new { @class = "form-control text-box single-line", @placeholder = "Base Revision", @required = "required" })
                        @Html.ValidationMessageFor(model => model.BaseRevision, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">
                            Base Submission Date
                        </label>
                        @Html.TextBoxFor(model => model.BaseSubmissionDate, new { @class = "form-control text-box single-line", @type = "date", @required = "required" })
                        @Html.ValidationMessageFor(model => model.BaseSubmissionDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">
                            Response Date
                        </label>
                        @Html.TextBoxFor(model => model.ResponseDate, new { @class = "form-control text-box single-line", @type = "date", @required = "required" })
                        @Html.ValidationMessageFor(model => model.ResponseDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">
                            Baseline Status
                        </label>
                        @Html.TextBoxFor(model => model.BaselineStatus, new { @class = "form-control text-box single-line", @placeholder = "Baseline Status", @required = "required" })
                        @Html.ValidationMessageFor(model => model.BaselineStatus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-1">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">
                            Remark
                        </label>
                        @Html.TextBoxFor(model => model.Remark, new { @class = "form-control text-box single-line", @placeholder = "Approval Period", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6 mt-2">
                    <div class="form-group mb-3">
                        @Html.CheckBoxFor(model => model.IsActive) Is Active
                    </div>

                </div>
            </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-sm btn-theme pull-right" value="Save">Save</button>
                    </div>
                </div>
            </div>
        }
</div>
