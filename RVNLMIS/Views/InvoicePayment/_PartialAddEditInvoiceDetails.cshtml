@model RVNLMIS.Models.InvoicePaymentDetail
@{
    Layout = null;
}
<style>
    .customtooltip b {
        display: none;
    }

    .customtooltip b {
        position: absolute;
        z-index: 999999;
        width: 100%;
        background: #fff;
        padding: 2px 10px 10px 8px;
        border-radius: 2px;
        margin-top: -3px;
        margin-left: 0px;
        font-size: 12px;
        box-shadow: 0px 3px 25px 0px rgba(95, 94, 94, 0.25);
        border-top: solid 4px #F44336;
    }

        .customtooltip b::before {
            content: "";
            width: 0;
            height: 0;
            position: relative;
            top: -27px;
            left: 0;
            font-size: 0;
            border-top: 10px solid transparent;
            border-bottom: 10px solid #ff3723;
            border-right: 10px solid transparent;
            border-left: 10px solid transparent;
        }

    .spnWord {
        padding: 2% !important;
    }
</style>
<script>

    $("p").focusin(function () {
        $(this).find("b").fadeIn().css("display", "block");
    });
    $("p").focusout(function () {
        $(this).find("b").css("display", "none");
    });

</script>
<div class="modal-content">
    <div class="modal-header">
        <h6 class="modal-title">Add / Update Invoice Details </h6>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>


    </div>
    @using (Ajax.BeginForm("AddInvoiceDetails", "InvoicePayment", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnInvoiceSuccess" }, new { @class = "form", @id = "Sectionform" }))
    {

        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(mode => Model.InvoiceId)
            @Html.Hidden("secCode", (string)@ViewBag.Sectioncode)
            <div class="row">

                <div class="col-md-12">
                    <div class="form-group mb-3 demo-section k-content" id="container">
                        <label class="col-form-label-sm-user text-black-50" for="txtUserName">Project   @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })</label>
                        @*<input type="text" class="mb-3 form-control form-control-sm" id="txtName" placeholder="Ex: Your Full Name">*@
                        @*@Html.DropDownListFor(model => model.ProjectId, ViewBag.ProjectList as SelectList, "Select Project", new { @class = "mb-3 form-control form-control-sm" })*@
                        @(Html.Kendo().DropDownListFor(m => m.ProjectId).Popup(p => p.AppendTo("#container")).Name("ProjectId").DataTextField("ProjectName").DataValueField("ProjectId")
                .HtmlAttributes(new { style = "width:100%" })
                .Filter("contains").OptionLabel("Select Project")

                .DataSource(source =>
                        {
                    source.Read(read =>
                    {
                        read.Action("ServerFiltering_GetProducts", "Packages");
                    })
                    .ServerFiltering(true);
                })

                        )


                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50">
                            Package
                            @Html.ValidationMessageFor(model => model.PackageId, "", new { @class = "text-danger" })
                        </label>
                        @*@Html.DropDownListFor(model => model.RoleTableId, new SelectList(Enumerable.Empty<SelectListItem>()), "Select Role Table", new { @class = "mb-3 form-control form-control-sm" })*@
                        @Html.DropDownListFor(model => model.PackageId, ViewBag.PackageList as SelectList, "Select Package", new { @class = "mb-3 form-control form-control-sm" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50" for="txtSectionCode">Invoice No (Ex: Invoice-0002) @Html.ValidationMessageFor(model => model.InvoiceNo, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.InvoiceNo, new { htmlAttributes = new { @class = "mb-3 form-control", @type = "text", @placeholder = "Ex: Invoice-0002", @maxlength = "15" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="col-form-label-sm-user text-black-50" for="txtSectionCode">Invoice Date @Html.ValidationMessageFor(model => model.InvoiceDates, "", new { @class = "text-danger" })</label>
                        @Html.EditorFor(model => model.InvoiceDates, new 
                        { htmlAttributes = new 
                            { 
                                @class = "mb-3 form-control", 
                                //onkeydown = "return false",
                                @type = "Date", 
                                @placeholder = "Ex: DD/MM/YYYY" 
                            } 
                        })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3 customtooltip">
                        <p>
                            <label class="col-form-label-sm-user text-black-50" for="txtSectionName">Invoice Amount @Html.ValidationMessageFor(model => model.InvoiceAmountString, "", new { @class = "text-danger" })</label>
                            @Html.EditorFor(model => model.InvoiceAmountString, new { htmlAttributes = new { @class = "mb-3 form-control allow_decimal", @type = "text", onkeypress = "return Numbers1DotOnly(this,event)", @placeholder = "Enter Invoice Amount", @maxlength = "19" } })
                        <b><span class="spnWord"></span></b></p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3 customtooltip">
                        <p>
                            <label class="col-form-label-sm-user text-black-50" for="txtSectionStart">
                                Certified Amount @Html.ValidationMessageFor(model => model.CertifiedAmountString, "", new { @class = "text-danger" })
                            </label>
                            @Html.EditorFor(model => model.CertifiedAmountString, new { htmlAttributes = new { @class = "mb-3 form-control allow_decimal", @type = "text", @placeholder = "Enter Certified Amount", onkeypress = "return Numbers1DotOnly(this,event)", @maxlength = "19" } })
                            <b><span class="spnWord"></span></b>
                        </p>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-sm btn-theme pull-right" value="Save">Save</button>
                </div>
            </div>
        </div>
    }

</div>