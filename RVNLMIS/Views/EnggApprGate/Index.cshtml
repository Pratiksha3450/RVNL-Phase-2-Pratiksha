@model RVNLMIS.Models.EnggApprGateModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .k-editor, .k-grid, .k-menu, .k-scheduler {
        border-radius: 0px !important;
         
    }
</style>

<!-- [ Main Content ] start -->
@*<script src="~/Scripts/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo.aspnetmvc.min.js"></script>*@

<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <input type="hidden" id="hiddenId" />
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Confirm Delete</h5>
                <button id="btnCloseDelete" type="button" class="close btn-xs " data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <p class="success-message">Are you sure you wish to delete selected Approval ?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-success delete-confirm" id="btnDeleteConfirm"><i class="fa fa-check mr-2"></i>Ok</button>
                <button class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times mr-2"></i>Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="content_wrapper">
    <div class="">
        @*<div class="page-header">
            </div>*@
        <!-- [ Main Content ] start -->
        <div class="row">

            <div class="col-sm-3 pr-1">
                <div id="EnggApprGateForms">
                    @Html.Partial("_PartialEditEnggApprGate", new RVNLMIS.Models.EnggApprGateModel())
                </div>
            </div>

            <!-- [ horizontal-layout ] start -->
            <div class="col-sm-9 pl-1">
                <div class="card">

                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-12 col-md-9">
                                <h5>Engg Approval Gate Details</h5>
                            </div>
                            <div class="col-sm-12 col-md-3">
                                <div class="input-group input-group-sm">
                                    <input type="search" id="txtSearch" style="width:380px" class="form-control" title="Search by appr gate name" aria-label="Small" aria-describedby="inputGroup-sizing-sm" placeholder="Search by Approval Gate Name" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive">
                        <div class="col-sm-12" id="KendoHeight">

                            @(Html.Kendo().Grid<RVNLMIS.Models.EnggApprGateModel>()
                                        .Name("EnggApprGateGrid")
                                        .Columns(columns =>
                                        {
                                                        //columns.Bound(c => c.EntityTypeId).HtmlAttributes(new { style = "text-align:left" })
                                                        //        .HeaderHtmlAttributes(new { style = "text-align:left" });
                                                        columns.Template(t => { }).Title("#").ClientTemplate("#= renderNumber(data) #").Width("4%");
                                            columns.Bound(c => c.AppGateName).HtmlAttributes(new { style = "text-align:left" })
                                                        .HeaderHtmlAttributes(new { style = "text-align:left" }).Width("20%").Title("Appr Gate Name");

                                            columns.Bound(c => c.Sequence).HtmlAttributes(new { style = "text-align:right" })
                                                        .HeaderHtmlAttributes(new { style = "text-align:right" }).Title("Sequence").Width("20%");


                                            columns.Template(@<text></text>).Title("Action").ClientTemplate("" +
                                        "<button  data-url='/EnggApprGate/EditEnggApprGateByApprId/#=ApprGateId#' class='EditEnggApprGate btn btn-xs btn-warning  has-ripple'><i class='feather icon-edit'></i></button>" + "&nbsp;" + "<button type='button' id='btnDeleteEnggApprGate' class='btn btn-xs btn-danger  has-ripple DeleteEnggApprGate' data-key='#=ApprGateId#' Title='Delete'><i class='feather icon-trash'></i></button>").HeaderHtmlAttributes(new { style = "text-align:left" }).Width("4%");
                        }).Scrollable(scr => scr.Height(395))
                        .ToolBar(tools => { tools.Excel(); tools.Pdf(); })
                        .Pageable()
                        .Sortable()
                        .Pageable(pageable => pageable
                        .Refresh(true)
                        .PageSizes(true)
                        .ButtonCount(5)
                        .PageSizes(new List<object>
                        { 10, 20, 50, "all" }).Refresh(true))
                        .PersistSelection(true)
                        .DataSource(dataSource => dataSource
                        .Ajax()
                        .Model(model => model.Id(u => u.ApprGateId))
                        .Read(read => read.Action("EnggApprGate_Details", "EnggApprGate"))
                        .PageSize(10))
                        .Events(events => events.PdfExport("HideColumn").ExcelExport("ExportExcel").DataBound("dataBound")).Groupable()
                        .Excel(excel => excel
                        .FileName("EnggApprGateExcel.xlsx")
                        .Filterable(true)
                        .ProxyURL(Url.Action("Excel_Export_Save", "Users"))
                        )
                        .Pdf(pdf => pdf
                        .AllPages()
                        .AvoidLinks()
                        .PaperSize("A4")
                        .Scale(0.8)
                        .Margin("2cm", "1cm", "1cm", "1cm")
                        .Landscape()
                        .RepeatHeaders()
                        .TemplateId("page-template")
                        .FileName("EnggApprGatePdf.pdf")
                        .ProxyURL(Url.Action("Pdf_Export_Save", "Users"))
                        )
                            )
                        </div>
                    </div>

                </div>
            </div>
            <!-- [ horizontal-layout ] end -->
        </div>

    </div>
</div>

@section scripts{
    <script>
        $(window).resize(function () {
            $('#KendoHeight').height($(window).height() - 195);
            $('#EnggApprGateGrid').height($(window).height() - 198);
        });
        $(window).trigger('resize');
        var rowNumber = 0;

        function resetRowNumber(e) {
            rowNumber = 0;
        }

        function renderNumber(data) {
            return ++rowNumber;
        }
    </script>
    <script>

        function OnEnggApprGateSuccess(response) {
            if (response == "1") {
                ClearViewAndGrid();
                $.notify("Data added successfully.", { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });
            }
            else if (response == "2") {
                ClearViewAndGrid();
                $.notify("Data updated successfully.", { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });
            }
            else if (response == "3") {
                //  ClearViewAndGrid();
                $.notify("Name already exists.", { align: "right", verticalAlign: "top", type: "warning", background: "#ff9933", color: "#ffffff" });
            }
            else if (response == "4") {
                // ClearViewAndGrid();
                $.notify("Please add different sequence number.", { align: "left", verticalAlign: "top", type: "warning", background: "#ff9933", color: "#ffffff" });
            }
            else {
                $("#EnggApprGateForms").html(response);
            }
        }

        function ExportExcel(e) {
            e.workbook.fileName = "Engg Approval Gate - " + kendo.toString(new Date, "dd-MMM-yyyy") + ".xls";
        }

        function HideColumn(e) {

            var grid = $("#EnggApprGateGrid").data("kendoGrid");
            grid.hideColumn(3);

            grid.options.pdf.fileName = "Engg Approval Gate - " + kendo.toString(new Date, "dd-MMM-yyyy");

            e.promise.done(function () {
                grid.showColumn(3);
            });
        }

        function dataBound() {
            rowNumber = 0;
            $(".EditEnggApprGate").on("click", function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                $.get(url, function (data) {
                    $('#EnggApprGateForms').html(data);
                    setTimeout(function () {

                    }, 500);
                });
            });

            $(".DeleteEnggApprGate").on("click", function () {
                console.info('DeleteUser called');
                var Id = $(this).data("key");
                $("#hiddenId").val(Id);
                $("#modalDelete").modal({ backdrop: 'static', keyboard: false, position: 'center' });
            });



        }
        $("#btnDeleteConfirm").on("click", function () {
            var id = $("#hiddenId").val();
            //alert(id);
            $.ajax({
                url: '/EnggApprGate/Delete/' + id,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function () {
                    //Refresh Kendo Grid

                    $("#modalDelete").modal('hide');
                    // ShowSuccessMessage('Deleted Successfully');
                    $('#EnggApprGateGrid').data('kendoGrid').dataSource.read();
                    $('#EnggApprGateGrid').data('kendoGrid').refresh();
                    $.notify('Deleted Successfully', { align: "right", verticalAlign: "top", type: "success", background: "#ff0000", color: "#fff" });

                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //ShowErrorMessage('Error deleting Project!');
                }
            });
        });

        function ClearViewAndGrid() {
            $("#ApprGateId").val(0);
            $("#AppGateName").val("");
            $("#Sequence").val("");
            $('#EnggApprGateGrid').data('kendoGrid').dataSource.read();
            $('#EnggApprGateGrid').data('kendoGrid').refresh();
        }

        $("#txtSearch").keyup(function () {
            var selecteditem = $('#txtSearch').val();
            var kgrid = $("#EnggApprGateGrid").data("kendoGrid");
            selecteditem = selecteditem.toUpperCase();
            var selectedArray = selecteditem.split(" ");
            if (selecteditem) {
                var orfilter = { logic: "or", filters: [] };
                var andfilter = { logic: "and", filters: [] };
                $.each(selectedArray, function (i, v) {
                    if (v.trim() == "") {
                    }
                    else {
                        $.each(selectedArray, function (i, v1) {
                            if (v1.trim() == "") {
                            }
                            else {
                                orfilter.filters.push({ field: "AppGateName", operator: "contains", value: v1 }
                                    //,{ field: "DisciplineName", operator: "contains", value: v1 }
                                );
                                andfilter.filters.push(orfilter);
                                orfilter = { logic: "or", filters: [] };
                            }

                        });
                    }
                });
                kgrid.dataSource.filter(andfilter);
            }
            else {
                kgrid.dataSource.filter({});
            }
        });

    </script>

    <script>
        //script to highlight current parent menu
        $(document).ready(function () {

            //Highlight parent menu : nav-item
            $('#liMasterUpdate').addClass('nav-item pcoded-hasmenu active');


            //highlight parent menu by overriding pcoded-trigger script
            $(".nav-item").hover(
                function () {
                    $('#liMasterUpdate').addClass('nav-item pcoded-hasmenu active');
                }, function () {
                    $('#liMasterUpdate').addClass('nav-item pcoded-hasmenu active');
                }
            );


            //remove active class from other parent menus
            $('#liKpi').removeClass('active');



        });
    </script>
}