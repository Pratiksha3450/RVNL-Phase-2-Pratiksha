@model RVNLMIS.Areas.RFI.Models.RFIActivityModel
@{
    Layout = null;
}
    <div class="card">
        <div class="card-header pb-4">
            <div class="row">
                <div class="col-sm-12 col-md-8">
                    <h5>RFI Activity</h5>
                </div>

            </div>

        </div>
        @*@using (Html.BeginForm("AddUserDetails", "Users", FormMethod.Post, new { @class = "form", @id = "Usersform" }))*@
        @using (Ajax.BeginForm("AddUpdateActivity", "RFIActivity", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateSuccess" }, new { @class = "form", Page = "UpdateChartform" }))

        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RFIActId)            
            <div class="card-body pl-3 pr-3 pb-1 pt-2" id="card1">
                <div class="row">
                    <div class="col-md-12" id="wrkCotainer">
                        <div class="form-group mb-1">
                            <label class="col-form-label-sm-user text-black-50">
                                Select Work Group
                                @Html.ValidationMessageFor(model => model.WorkGroupId, "", new { @class = "text-danger" })
                            </label>
                            <div class="input-group input-group-sm mt-3" id="actCotainer">
                                @(Html.Kendo().DropDownListFor(model => model.WorkGroupId).Popup(p => p.AppendTo("#wrkCotainer")).HtmlAttributes(new { data_value_primitive = "true" })
                                         .Name("WorkGroupId")
                                         .DataTextField("WorkgroupName")
                                         .DataValueField("WorkgroupId")
                                         .HtmlAttributes(new { style = "width:100%" })
                                         .Filter("contains").OptionLabel("Select Work group")
                                         .DataSource(source =>
                                         {
                                             source.Read(read =>
                                             {
                                                 read.Action("Get_WorkGroup", "RFIActivity");
                                             })
                                                  .ServerFiltering(true);
                                         })
                                )
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12" id="actCotainer">
                        <div class="form-group mb-1">
                            <label class="col-form-label-sm-user text-black-50">
                                Select Activity
                                @Html.ValidationMessageFor(model => model.ConsActId, "", new { @class = "text-danger" })
                            </label>
                            <div class="input-group input-group-sm mt-3" id="actCotainer">
                                @(Html.Kendo().DropDownListFor(model => model.ConsActId).Popup(p => p.AppendTo("#actCotainer")).HtmlAttributes(new { data_value_primitive = "true" })
                                         .Name("ConsActId")
                                         .DataTextField("ActivityName")
                                         .DataValueField("ConsActID")
                                         .HtmlAttributes(new { style = "width:100%" })
                                         .Filter("contains").OptionLabel("Select Activity")
                                         .DataSource(source =>
                                         {
                                             source.Read(read =>
                                             {
                                                 read.Action("Get_ConstActivity", "RFIActivity");
                                             })
                                                  .ServerFiltering(true);
                                         })
                                )
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 mt-2 mb-2">
                        <div class="form-group mb-1">
                            <label class="col-form-label-sm-user text-black-50" for="txtActName">
                                Activity Name @Html.ValidationMessageFor(model => model.RFIActName, "", new { @class = "text-danger" })
                            </label>
                            @Html.EditorFor(model => model.RFIActName, new { htmlAttributes = new { @class = "mb-1 form-control ", @type = "text", @maxlength = "200", @placeholder = "Ex:  Activty Name" } })
                        </div>
                    </div>
                    <div class="col-md-12 mt-2 mb-2">
                        <div class="form-group mb-1">
                            <label class="col-form-label-sm-user text-black-50" for="txtActName">
                                Unit @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })
                            </label>
                            @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "mb-1 form-control ", @type = "text", @maxlength = "50", @placeholder = "Ex:  Unit" } })
                        </div>
                    </div>

                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-sm btn_theme pull-right" id="btnUploadChanges" value="Save">Save</button>
                    </div>


                </div>

            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12 text-right p-4">
                        @*<button type="submit" class="btn btn-sm btn_theme pull-right" id="btnUploadChanges" value="Save">Save</button>*@
                    </div>

                </div>
            </div>
        }
    </div>
<script>
    $(window).resize(function () {
        $('#card1').height($(window).height() - 257);
    });
    $(window).trigger('resize');
</script>

