        function UpdateUserNotifySuccess(response) {
            if (response == "1") {
                $.notify("Notification setting updated successully.", { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });
            }
            else if (response == "2") {
