        function UpdateUserProfileSuccess(response) {
            if (response == "1") {
                $.notify("Profile details updated successfully.", { align: "right", verticalAlign: "top", type: "success", background: "#20D67B", color: "#fff" });

                $("#divUserName").html(response.name);
